    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "port": 9229,
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"]
        },
        {
            "type": "node",
            "name": "Jest tests",
            "request": "launch",
            "runtimeExecutable": "npm",
            "args": [
                "run-script",
                "test"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "internalConsoleOptions": "neverOpen",
        },
    ]
}